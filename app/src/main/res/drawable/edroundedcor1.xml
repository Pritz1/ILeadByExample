<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item android:left="3dp" android:top="0dp">
                <shape>
                    <corners
                        android:bottomLeftRadius="0dp"
                        android:bottomRightRadius="36dp"
                        android:topLeftRadius="0dp"
                        android:topRightRadius="36dp"></corners>
                    <solid android:color="#919191" />
                </shape>
            </item>
            <item android:bottom="2dp" android:left="2dp">
                <shape>
                    <gradient android:angle="270"
                        android:endColor="#2196F3" android:startColor="#00BCD4" />
                    <stroke android:width="1dp" android:color="#FFFFFF" />
                    <corners
                        android:bottomLeftRadius="0dp"
                        android:bottomRightRadius="25dp"
                        android:topLeftRadius="0dp"
                        android:topRightRadius="25dp"></corners>
                    <padding android:bottom="10dp" android:left="10dp"
                        android:right="10dp" android:top="10dp" />
                </shape>
            </item>
        </layer-list>
    </item>

</selector>