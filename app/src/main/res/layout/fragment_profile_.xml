<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/backgroung"
    android:layout_height="match_parent"
    android:layout_marginBottom="53dp"
    tools:context=".Fragments.Profile_Frag">
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
        <android.support.design.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/m1"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="8dp"
                android:weightSum="10">
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    app:srcCompat="@drawable/ic_person_all"
                    android:padding="4dp"
                    android:layout_weight="1"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="9"
                    android:layout_gravity="center"
                    android:id="@+id/name"
                    android:textSize="18sp"
                    android:text="Bhushan Patil"
                    android:paddingStart="10dp"/>
            </LinearLayout>
        </android.support.design.card.MaterialCardView>
        <android.support.design.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:id="@+id/m2"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="8dp"
                android:weightSum="10">
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    app:srcCompat="@drawable/ic_person_pin_all"
                    android:padding="4dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="9"
                    android:layout_gravity="center"
                    android:id="@+id/address"
                    android:textSize="18sp"
                    android:text="Bhushan Patil"
                    android:paddingStart="10dp"
                    android:maxLines="10"/>
            </LinearLayout>
        </android.support.design.card.MaterialCardView>
        <android.support.design.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/m3"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="8dp"
                android:weightSum="10">
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    app:srcCompat="@drawable/ic_phone_all"
                    android:padding="4dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="9"
                    android:layout_gravity="center"
                    android:id="@+id/contact"
                    android:textSize="18sp"
                    android:text="8898740305"
                    android:paddingStart="10dp"
                    android:maxLines="10"/>
            </LinearLayout>
        </android.support.design.card.MaterialCardView>
            <android.support.design.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/m4"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="8dp"
                    android:weightSum="10">
                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="35dp"
                        app:srcCompat="@drawable/ic_assignment_all"
                        android:padding="4dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="9"
                        android:layout_gravity="center"
                        android:id="@+id/id"
                        android:textSize="18sp"
                        android:text="03252"
                        android:paddingStart="10dp"
                        android:maxLines="10"/>
                </LinearLayout>
            </android.support.design.card.MaterialCardView>
    <android.support.design.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/m5"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/changepass"
            android:layout_margin="8dp"
            android:weightSum="10">
            <ImageView
                android:layout_width="0dp"
                android:layout_height="35dp"
                app:srcCompat="@drawable/ic_vpn_key_all"
                android:layout_gravity="center"
                android:padding="4dp"
                android:layout_weight="1"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="8"
                android:layout_gravity="center"
                android:textSize="18sp"
                android:textStyle="bold"
                android:gravity="center"
                android:text="CHANGE PASSWORD"
                android:paddingStart="10dp"
                android:maxLines="10"/>
            <ImageView
                android:layout_width="0dp"
                android:layout_height="35dp"
                app:srcCompat="@drawable/ic_mode_edit_all"
                android:padding="4dp"
                android:layout_gravity="center"
                android:layout_weight="1"/>
        </LinearLayout>
    </android.support.design.card.MaterialCardView>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>